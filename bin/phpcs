#!/usr/bin/env bash

source $(dirname $0)/../lib/bowline/bowline
assert_running

# Make sure Drupal sniffer is installed
if [ ! "$(docker exec -i ${web} sudo -iu www-data /var/www/vendor/bin/phpcs --config-show)" ];then
  docker exec -i ${web} sudo -iu www-data /var/www/vendor/bin/phpcs \
    --config-set installed_paths /var/www/vendor/drupal/coder/coder_sniffer -v
fi

docker exec -i ${web} sudo -iu www-data /var/www/vendor/bin/phpcs "$@"
